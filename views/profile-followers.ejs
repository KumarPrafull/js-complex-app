<%- include('includes/header') %>
  
  <div class="container py-md-5 container--narrow">

    <%- include('includes/flash') %>

    <%- include('includes/profileShared') %>
  
    <div class="list-group">
      <% followers.forEach(function(following){ %>
        <a href="/profile/<%= following.username %>" class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%= following.avatar %>">
          <%= following.username %>
        </a>
      <% }) %>
    </div>
  </div>
  
  <%- include('includes/footer') %>>